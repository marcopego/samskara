{{#if @member}}
  <button role="link" data-members-signout>Sign out</button>
{{else}}
<div class="subscribe-section text-center shadow bg-white">
	<h4 class="subscribe-heading">Subscribe for updates</h4>
	<p class="subscribe-catchy">We'll never share your email with anyone else.</p>
    <form class="subscribe-form" data-members-form>
  <input class="subscribe-input form-control form-control-sm" data-members-email type="email" required="true" placeholder="Your email address"/>
  <button class="btn btn-primary subscribe-confirm" type="submit">Continue</button>
</form>
</div>
{{/if}}